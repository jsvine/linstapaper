knicksorange = #FF5C2B
knicksblue = #2E66B2
body
	font-family Palatino Linotype, Book Antiqua, Palatino, serif
	color #333
	font-size 10px
	max-width 600px
	margin 1em auto
	padding 0 1em
	background-color #EEE

a
	text-decoration none
	color knicksblue
	&:hover
		color knicksorange

h1
	text-align center
	font-family Helvetica, sans-serif
	font-size 3em
	margin 10px

.orange
	color knicksorange

.blue
	color knicksblue


.article 
	background #FFF
	margin 10px 0
	padding 10px
	border 1px solid #CCC
	-moz-box-shadow 2px 2px 2px #EEE
	-webkit-box-shadow 2px 2px 2px #EEE
	box-shadow 2px 2px 2px #EEE

.hed
	font-size 1.75em
	font-weight bold
	margin 0.25em 0

.dek
	font-size 1.5em
	color #666

.info
	overflow auto
	font-size 1.25em
	margin 0.5em 0
	color #777

.date
.auth
.pub
	float left
.date
.pub
	&:before
		content " :: "
		margin 0 0.5em

iframe.instapaper
	width 78px
	height 17px
	margin 0.5em 0

.about
	font-size 1.2em
	font-weight bold

@media screen and (max-width: 400px)
	.date
	.pub
		clear left
		&:before
			content ""
			margin 0
